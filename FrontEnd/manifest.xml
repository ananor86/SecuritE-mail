<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">
  
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="SecuritE-mail Demo"/>
  <Description DefaultValue="Given body of composing email, checks for sensitive words in database"/>
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <set Name="MailBox" MinVersion="1.1" />
    </Sets>    
  </Requirements>
  
  <!-- gives add-in read permissions to composing emails -->
  <Permissions>ReadItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>


  <!-- specifies application, types of controls, text, icons, and any associated functions -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <!-- name of file that executes all our functions (needs event) -->
          <FunctionFile resid="" />
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
            
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>

      </Host>
    </Hosts>
    
    <!-- local elements, i.e. name, image etc. -->
    <Resources>
    </Resources>

  </VersionOverrides>
</OfficeApp>
